<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>

  <%= f.label :test_command %>
  <%= f.text_field :test_command %>
  <br>

  <%= f.label :test %>
  <%= f.text_area :test %>
  <br>

  <%= f.submit "Create Task" %>
<% end %>
